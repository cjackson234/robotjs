{
  "name": "robotjs_addon",
  "version": "0.6.0",
  "description": "Node.js Desktop Automation.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "node test.js",
    "build": "node-gyp configure &&node-gyp rebuild",
    "install": "node-pre-gyp install --fallback-to-build",
    "pack": "node-pre-gyp package",
    "publish":"node-pre-gyp-github publish",
    "clean": "node-gyp clean"
  },
  "binary": {
    "module_name": "robotjs_addon",
    "module_path": "./lib/binding/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/ftyszyx/robotjs/releases/download/",
    "remote_path": "{version}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/octalmage/robotjs.git"
  },
  "keywords": [],
  "author": "Jason Stallings",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/octalmage/robotjs/issues"
  },
  "homepage": "https://github.com/octalmage/robotjs",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "node-addon-api": "*",
    "node-pre-gyp-github": "^2.0.0"
  }
}
